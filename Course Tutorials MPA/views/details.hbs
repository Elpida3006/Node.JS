    <main>
            <div class="container">
                <h1 class="my-4">Course title : {{product.title}}
                </h1>

                <div class="row">

                    <div class="col-md-8">
                        <img class="img-fluid"
                            src="{{product.imageUrl}}"
                            alt="Express" />
                        <p>{{product.createdAt}}</p>
                    </div>

                    <div class="col-md-4 text-center">
                        <h3 class="my-3">Course Description</h3>
                        <p>{{product.description}}</p>
                        <p>{{product.userBookedEnrolled.length}}</p>
                    
{{#if isCreator}}
                        <a class="btn btn-danger" href="/products/delete/{{product._id}}">Delete</a>
                        <a class="btn btn-warning" href="/products/edit/{{product._id}}">Edit</a>
{{/if}}   
{{#unless isCreator}}
                       {{#if isEnroll}}
                        <span class="enrolled-span">You are already enrolled</span>
                       {{else}}
                        <a class="btn btn-primary" href="/products/enroll/{{product._id}}">Enroll</a>
                        {{/if}}
 {{/unless}}
                    </div>
                </div>
            </div>
        </main>

       