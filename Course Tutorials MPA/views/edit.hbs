

        <main>
            <form class="text-center border border-light p-5" action="/products/edit/{{product._id}}" method="POST">
                <h1>Edit Course</h1>
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" placeholder="Course name" value="{{product.title}}" name="title">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" placeholder="Description" name="description">{{product.description}}</textarea>
                </div>
                <div class="form-group">
                    <label for="imageUrl"></label>
                    <input type="text" class="form-control" placeholder="Image Url" value="{{product.imageUrl}}" name="imageUrl">
                </div>
              <div class="form-check">
                     {{#if isChecked}}
                      <input type="checkbox" class="form-check-input" id="check-box" name="isPublic" checked value="on">
        {{else}}
                <input type="checkbox" class="form-check-input" id="check-box" name="isPublic"  value="false">
{{/if}}
      
        <label class="form-check-label" for="check-box">Public</label>
    </div>
                
                <button type="submit" class="btn btn-primary">Edit</button>
            </form>
        </main>

      